<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

    <constant name="struts.devMode" value="true" />

    <package name="default" namespace="/" extends="struts-default">

		<action name="*"
				class="com.atguigu.websrc.action.WebSrcAction"
				method="{1}">
			<result>/result.jsp</result>
		</action>
		
		<action name="testXxxAware" 
				class="com.atguigu.websrc.action.AwareMapAction"
				method="testXxxAware">
			<result>/result.jsp</result>
		</action>
		
		<action name="testServletActionContext" 
				class="com.atguigu.websrc.action.ServletResAction"
				method="testServletActionContext">
			<result>/result.jsp</result>
		</action>
		
		<action name="testServletXxxAware" 
				class="com.atguigu.websrc.action.ServletAwareAction"
				method="testServletXxxAware">
			<result>/result.jsp</result>
		</action>
        
    </package>

</struts>
